from picamera import PiCamera
from time import sleep, time
from datetime import datetime
from gpiozero import Button

camera = PiCamera()
camera.resolution = (2592, 1944)
camera.framerate = 15

button = Button(17)
frame = 1
timer = 60

while True:
    try:
        # button.wait_for_press()q
        camera.annotate_text = "Hello world!"
        # qtimestamp = datetime.now().isoformat()
        camera.capture('/home/pi/timelapse/shots_%03d.jpg' % frame)
        frame += 1
        sleep(timer)
    except KeyboardInterrupt:
        break

